<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="/var/log/gv24/internal-nlog.txt">

  <targets>

    <target xsi:type="Console" name="console" layout="${logger}: ${uppercase:${level}}: ${message}"/>

    <target xsi:type="File" name="all" fileName="/var/log/gv24/all-${shortdate}.log"
            layout="${date:universalTime=false:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=toString}" />

    <target xsi:type="File" name="warn" fileName="/var/log/gv24/warn-${shortdate}.log"
            layout="${date:universalTime=false:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=toString}" />

    <target xsi:type="File" name="error" fileName="/var/log/gv24/error-${shortdate}.log"
            layout="${date:universalTime=false:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=toString}" />

    <target xsi:type="File" name="trace" fileName="/var/log/gv24/trace-${shortdate}.log"
            layout="${date:universalTime=false:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=toString}" />

    <target xsi:type="File" name="info" fileName="/var/log/gv24/info-${shortdate}.log"
            layout="${date:universalTime=false:format=O}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception:format=toString}" />

  </targets>

  <rules>
    <logger name="Microsoft.Hosting.Lifetime" writeTo="console" />
    <logger name="Gv24.WebApi.Startup" writeTo="console"/>
    <logger name="*" writeTo="all" />
    <logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="trace" />
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warn" />
    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="error" />
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="info"/>
  </rules>
</nlog>
